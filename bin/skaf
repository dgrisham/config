#!/usr/bin/env zsh

while getopts ":h:" opt; do
    case "$opt" in
        h)
            echo "usage: skaf [-h] "
            return 0
            ;;
        \?)
            echo "unknown option: -$OPTARG" >&2
            return 1
            ;;
    esac
done
shift $((OPTIND-1))

target=$(alias_call sk)
[[ -z "$target" ]] && return 1
if [[ -f $target ]]; then
    $EDITOR $target
else [[ -d $target ]]
    cd $target
fi
