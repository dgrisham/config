#!/bin/zsh

export DISPLAY=:0

cmd=$(printf 'office\ndisconnect' | dmenu -p 'action: ')
[[ -z "$cmd" ]] && exit 1

case $cmd in
    office)
        $HOME/.screenlayout/office.sh
        ;;
    disconnect)
        xrandr --output eDP-1 --mode 2256x1504 --primary\
               --output DP-1   --off \
               --output DP-2   --off \
               --output DP-3   --off \
               --output DP-4   --off \
               --output DP-3-1 --off \
               --output DP-3-2 --off \
               --output DP-3-3 --off
        ;;
    *)
        herbe "Invalid command '$cmd'"
        exit 1
        ;;
esac

$HOME/bin/fehbg
