#!/bin/zsh

export DISPLAY=:0

cmd=$(printf 'external-on-left\ndisconnect' | dmenu -p 'action: ')
[[ -z "$cmd" ]] && exit 1

case $cmd in
    external-on-left)
        xrandr --output eDP-1 --primary --mode 2256x1504 --pos 2560x0 --rotate normal --output DP-3 --mode 2560x1440 --pos 0x64 --rotate normal --output DP-1 --off --output DP-2 --off --output DP-4 --off
        ;;
    disconnect)
        xrandr --output DP-1 --off --output DP-2 --off --output DP-3 --off --output DP-4 --off
        ;;
    *)
        herbe "Invalid command '$cmd'"
        exit 1
        ;;
esac
