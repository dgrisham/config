#!/usr/bin/env zsh

export AG_PREFIX='ag --color --hidden --ignore node_modules --ignore .git'
fzf --ansi --disabled \
    --delimiter : \
    --query "$*" \
    --bind "start:reload:$AG_PREFIX {q} || true" \
    --bind "change:reload:$AG_PREFIX {q} || true" \
    --bind "enter:execute($EDITOR {1} +{2})+reload:$AG_PREFIX {q} || true"
